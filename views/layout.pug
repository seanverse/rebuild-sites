doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="keywords", content= keywords || 'RB, REBUILD')
    meta(name="description", content= description)
    title= title || "REBUILD"
    link(rel="icon", type="image/png", href="/img/favicon.png")
    link(rel="stylesheet", href="//cdn.staticfile.org/twitter-bootstrap/4.3.1/css/bootstrap.min.css")
    link(rel="stylesheet", href="//cdn.staticfile.org/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="/css/site.css")
  body
    //- Loading
    div#preloader.hide
      div.jumper
        div
        div
        div

    //- header
    header.header-area.header-sticky
      div.container
        div.row
          div.col-12
            nav.main-nav
              a.logo(href="https://getrebuild.com/")
                img(src="/img/logo.png", alt="Logo")
              ul.nav
                li
                  a.active(href="/") #{t('nav.home')}
                li
                  a(href="https://github.com/getrebuild/rebuild/releases") #{t('nav.download')}
                li
                  a(href="/docs/") #{t('nav.document')}
                li.submenu
                  a(href="javascript:;") #{t('nav.more')}
                  ul
                    li
                      a(href="https://github.com/getrebuild/rebuild/") GitHub
                li
                  a.btn-nav(href="https://nightly.getrebuild.com/") #{t('nav.freeTry')}
              a.menu-trigger
                span #{t('nav.menu')}

    //- content
    block content

    //- footer
    footer
      div.container
        div.row
          div.col-lg-5.col-md-12.col-sm-12
            img.logo(src="/img/logo-white.png", alt="Logo")
            div.text
            ul.social.lng
              li
                i.fa.fa-globe(style="color:#fff;font-size:15px;")
              li
                a(href="?lng=en") EN
              li
                a(href="?lng=zh-CN") 中文
          div.col-lg-2.col-md-4.col-sm-6.col-6
            h5 #{t('nav.help')}
            ul.footer-nav
              li
                a(href="/docs/")
                  i.fa.fa-angle-right
                  span #{t('nav.helpDoc')}
          div.col-lg-2.col-md-4.col-sm-6.col-6
            h5 #{t('nav.support')}
            ul.footer-nav
              li
                a(href="https://github.com/getrebuild/rebuild/issues/new")
                  i.fa.fa-angle-right
                  span #{t('nav.newIssue')}
              li
                a(href="https://github.com/getrebuild/rebuild/blob/master/LICENSE")
                  i.fa.fa-angle-right
                  span #{t('nav.license')}
          div.col-lg-3.col-md-4.col-sm-12
            h5 #{t('nav.contactUs')}
            div.address
              p #{t('nav.email')}: getrebuild@sina.com
              p #{t('nav.phone')}: (86) 17187472172

        //- copyright
        div.row
          div.col-lg-12
            p.copyright &copy; #{t('nav.copyright')}

    script(src="//cdn.staticfile.org/jquery/2.1.4/jquery.min.js")
    script(src="//cdn.staticfile.org/twitter-bootstrap/4.3.1/js/bootstrap.min.js")
    script(src="//cdn.staticfile.org/parallax.js/1.5.0/parallax.min.js")
    script(src="/js/site.js")