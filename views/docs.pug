doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="keywords", content= keywords || "REBUILD,RB,GETREBUILD,CRM,OA,ERP,MIS,CRM系统,企业管理,业务系统,办公,企业中台")
    meta(name="description", content= description || "免费开源，高度可定制化的业务管理系统")
    title= title || "文档 REBUILD"
    link(rel="icon", type="image/png", href="/img/favicon.png")
    link(rel="stylesheet", href="//cdn.staticfile.org/twitter-bootstrap/4.3.1/css/bootstrap.min.css")
    link(rel="stylesheet", href="//cdn.staticfile.org/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="/css/sites.css?v=20190807")
    link(rel="stylesheet", href="/css/docs.css?v=20190807")
  body
    //- header
    header.header-area.header-sticky
      div.container
        div.row
          div.col-12
            nav.main-nav
              a.logo(href="https://getrebuild.com/")
                img(src="/img/logo.png", alt="Logo")
              ul.nav
                li
                  a(href="/") 首页
                li
                  a.active(href="/download") 下载
                li
                  a(href="/docs/") 文档
                li.submenu
                  a(href="javascript:;") 更多
                  ul
                    li
                      a(href="https://github.com/getrebuild/rebuild/") GitHub
                li
                  a.btn-nav(href="https://nightly.getrebuild.com/") 免费试用
              a.menu-trigger
                span 菜单

    //- content
    div.container.docs
      div.row
        div.col-3 #{nav}
        div.col-9 #{content}

    //- footer
    footer(style="padding-top:0")
      div.container
        //- copyright
        div.row
          div.col-lg-12
            div.copyright(style="margin:0")
              p &copy; 2019 REBUILD 版权所有 · 沪ICP备15028736号

    script(src="//cdn.staticfile.org/jquery/2.1.4/jquery.min.js")
    script(src="//cdn.staticfile.org/twitter-bootstrap/4.3.1/js/bootstrap.min.js")
    script(src="//cdn.staticfile.org/parallax.js/1.5.0/parallax.min.js")
    script(src="/js/sites.js?v=20190807")
    script(src="/js/docs.js?v=20190807")